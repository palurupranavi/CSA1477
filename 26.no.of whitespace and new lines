#include <stdio.h>

int main()
{
    FILE *f;
    int ch,line = 0,space = 0,characters=0,words=0;
    f= fopen("vi.txt", "r");
    if (f== NULL)
        printf("Can't open %s for reading.\n");
    else
    {
        while ((ch = fgetc(f)) != EOF)
        if (ch == ' ')
                space++;
        if(ch==' '||ch=='\n')
     words++;
   if (ch == '\n')
      line++;
    if(ch!=' ')
      characters++;
   }
   if (characters > 0)
   {
   	  words++;
      line++;
   }
        printf(" ");
        printf("\nNumber of spaces = %d", space);
        printf("\nNumber of lines = %d", line);
        fclose(f);
    return 0;
}
                
